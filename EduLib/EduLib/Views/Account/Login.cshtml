@{
    ViewData["Title"] = "Login";
}
<!-- ตั้งค่า Title ของ View ให้เป็น "Login" ซึ่งจะแสดงเป็นหัวข้อในหน้าต่างเบราว์เซอร์ -->
<h2>@ViewData["Title"]</h2>
<!-- แสดงหัวข้อ H2 ในหน้าเว็บ โดยใช้ค่า ViewData["Title"] ที่กำหนดไว้เป็น "Login" -->

<div class="row">
    <div class="col-md-6">
        <!-- ฟอร์มสำหรับการเข้าสู่ระบบ -->
        <form action="/Account/Login" method="post">
            <!-- ส่วน Username -->
            <div class="form-group">
                <label for="username">UserId</label>
                <!-- ช่องกรอกข้อมูลสำหรับ Username -->
                <input type="text" id="username" name="Username" class="form-control" placeholder="Enter your UserId" required />
                <!-- แสดงข้อความข้อผิดพลาดของ Username ถ้ามี -->
                <span class="text-danger" id="usernameError"></span>
            </div>

            <!-- ส่วน Password -->
            <div class="form-group">
                <label for="password">Password</label>
                <!-- ช่องกรอกข้อมูลสำหรับ Password -->
                <input type="password" id="password" name="Password" class="form-control" placeholder="Enter your password" required />
                <!-- แสดงข้อความข้อผิดพลาดของ Password ถ้ามี -->
                <span class="text-danger" id="passwordError"></span>
            </div>

            <!-- Remember Me Checkbox -->
            <div class="form-group form-check">
                <input type="checkbox" id="rememberMe" name="RememberMe" class="form-check-input" />
                <label for="rememberMe" class="form-check-label">Remember me</label>
            </div>

            <!-- ปุ่ม Log in -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>

            <!-- ลิงก์ไปหน้าลงทะเบียนสำหรับผู้ใช้ใหม่ -->
            <div class="form-group">
                <a href="/Account/Register">Don't have an account? Register here.</a>
            </div>
        </form>
    </div>
</div>

<script>
    // การตรวจสอบข้อมูลฝั่งลูกค้าแบบเบื้องต้นก่อนส่งฟอร์ม
    document.querySelector('form').addEventListener('submit', function (e) {
        let valid = true;
        let username = document.getElementById('username');
        let password = document.getElementById('password');

        // ตรวจสอบว่าผู้ใช้กรอก Username หรือไม่
        if (username.value === "") {
            valid = false;
            document.getElementById('usernameError').innerText = "Username is required.";
        } else {
            document.getElementById('usernameError').innerText = "";
        }

        // ตรวจสอบว่าผู้ใช้กรอก Password หรือไม่
        if (password.value === "") {
            valid = false;
            document.getElementById('passwordError').innerText = "Password is required.";
        } else {
            document.getElementById('passwordError').innerText = "";
        }

        // ถ้า Username หรือ Password ว่าง จะป้องกันไม่ให้ฟอร์มถูกส่ง
        if (!valid) {
            e.preventDefault();
        }
    });
</script>
